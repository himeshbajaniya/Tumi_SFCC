                            "tabRfkId": {
                                "title": "Tab RfkId",
                                "description": "Enter Tab PId's",
                                "type": "string",
                                "minLength": 1,
                                "maxLength": 256,
                                "format": "text"
                            },
                            "reviewStars": {
                                "title": "Review Rating Stars",
                                "description": "Enter Review Rating Stars",
                                "type": "string",
                                "minLength": 1,
                                "maxLength": 256,
                                "format": "text"

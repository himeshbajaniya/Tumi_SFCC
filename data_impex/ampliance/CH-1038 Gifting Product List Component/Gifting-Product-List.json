            "maxLength": 256,
            "format": "text"
        },
        "title": {
            "title": "Title",
            "description": "Enter Title",
            "type": "string",
            "minLength": 1,
            "maxLength": 256,
            "format": "text"
        },
        "tabs": {
            "title": "Tabs",
            "description": "add tabs",
            "type": "array",
            "minItems": 1,
            "maxItems": 6,
            "items": {
                "allOf": [
                    {
                        "type": "object",
                        "properties": {
                            "tabName": {
                                "title": "Tab Name",
                                "description": "Enter Tab Name",

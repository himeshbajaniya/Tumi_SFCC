                                "minLength": 1,
                                "maxLength": 256,
                                "format": "text"
                            },
                            "tabPId": {
                                "title": "Tab PId's",
                                "description": "Enter Tab PId's",
                                "type": "string",
                                "minLength": 1,
                                "maxLength": 256,
                                "format": "text"

                            "reviewDescription": {
                                "title": "Review Description",
                                "description": "Enter Review Description",
                                "type": "string",
                                "minLength": 1,
                                "maxLength": 256,
                                "format": "text"
                            },
                            "reviewAuthor": {
                                "title": "Review Author",
                                "description": "Enter Review Author",
                                "type": "string",
                                "minLength": 1,
                                "maxLength": 256,
                                "format": "text"

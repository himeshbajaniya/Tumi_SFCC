{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://www.tumi.com/grid-breaker-component",
	"title": "Title",
	"description": "Description",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"content-asset-id": {
			"title": "Content Asset ID",
			"description": "SFCC Content Asset",
			"type": "string",
			"minLength": 1,
			"maxLength": 256,
			"format": "text"
		},
		"selectionOfContent": {
			"title": "Selection Of Content",
			"type": "string",
			"enum": [
				"alignTop",
				"alignMiddle",
				"alignBottom"
			]
		},
		"selectionOfTheme": {
			"title": "Selection Of Theme",
			"type": "string",
			"enum": [
				"Dark",
				"Light"
			]
		},
		"mainTagLine": {
			"title": "Main Tag Line",
			"description": "Enter the Main Tag Line (optional)",
			"type": "string",
			"minLength": 0,
			"maxLength": 256
		},
		"description": {
			"title": "Description",
			"description": "Enter the Description (optional)",
			"type": "string",
			"minLength": 0,
			"maxLength": 1000
		},
		"bottomCTA": {
			"title": "CTA",
			"description": "Enter CTA to be shown on tile",
			"type": "string",
			"minLength": 0,
			"maxLength": 255
		},
		"bottomCTAURL": {
			"title": "CTA URL",
			"description": "URL",
			"type": "string",
			"minLength": 0,
			"maxLength": 250
		}
	},
	"propertyOrder": []
}